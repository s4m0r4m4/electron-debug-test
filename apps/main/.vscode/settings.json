{
	"prettier.singleQuote": true,
	"prettier.printWidth": 140,
	"prettier.useEditorConfig": true,
	// HTML settings
	"html.validate.styles": true,
	"html.format.wrapLineLength": 140,
	"html.format.wrapAttributes": "force-aligned",
	"html.format.indentHandlebars": false,
	"html.format.maxPreserveNewLines": 1,
	"html.format.preserveNewLines": true,
	"html.mirrorCursorOnMatchingTag": true,
	// Files to show/hide
	"files.exclude": {
		"**/.git": true, // this is a default value
		"**/.DS_Store": true, // this is a default value
		"./dist": true, // Exclude temporary-output from ng build
		"**/bin": true, // Ignore output from visual studio 2017 build
		"**/obj": true, // Ignore output from visual studio 2017,
        "**/common" : true
	},
	// VS Code Search
	"search.exclude": {
		"**/node_modules": true,
		"**/bower_components": true,
		"**/*.code-search": true,
		"**/coverage": true, // Code coverage report
        "**/dist": true, // Exclude temporary-output from ng build
        "**/common" : true
	},
	"editor.codeActionsOnSave": {
        "source.organizeImports": true
        // "source.fixAll": true
    },
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
}
