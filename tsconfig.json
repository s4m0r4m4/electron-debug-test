{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": ["es2017", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@redhand/src/*": ["apps/ui/src/*"]
        },
        "preserveSymlinks": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2015",
        "typeRoots": ["node_modules/@types"]
    },
    "exclude": ["node_modules", "tmp"]
}
